{% block body %}

    <div class="page-banner bg-3">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-content">
                    <h2>Infos pratiques</h2>
                    <ul>
                        <li><a href="{{ path('home') }}">Acceuil</a></li>
                        <li>infos pratiques</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="privacy-policy ptb-100">
        <div class="container">
            <div class="privacy-policy-text">

                <h2 align="justify">POUR ASSURER LA TRAVERSEE DANS LE CONFORT ET LA SECURITE:</h2>

            </div>
        </div>
    </div>

    <div class="about-info-area pb-70">
    <div class="container">
    <div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="about-info-card">
            <h3>Respecter les recommandations suivantes:</h3>


            <ul>
                {% for n in info  %}
                    <li align="justify">
                        {% if n.recommandations !=null %}
