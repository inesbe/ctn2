{% endblock %}

{% block body %}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>

                        <p>New Orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>53<sup style="font-size: 20px">%</sup></h3>

                        <p>Bounce Rate</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>

                        <p>User Registrations</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->

            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Responsive Hover Table</h3>

                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Num_plomb</th>
                                        <th>Date_chargement</th>
                                        <th>Date_enlevement</th>
                                        <th>Poids_tare</th>
                                        <th>Type</th>
                                        <th>Temperature</th>
                                        <th>Prorietaire</th>
                                        <th>Reference</th>
                                        <th>Poids_brute</th>
                                        <th>Unite_payante</th>
                                        <th>Nb_colis</th>
                                        <th>Id_utilisateur</th>

                                        <th>Bl</th>
                                        <th>Etat</th>
                                        <th>Bl_etat</th>
                                        <th>actions</th>
                                    </thead>
                                    <tbody>

                                    {% for container in Conteneurs %}
                                        <tr>
                                            <td>{{ container.id }}</td>
                                            <td>{{ container.numPlomb }}</td>
                                            <td>{{ container.dateChargement ? container.dateChargement|date('Y-m-d') : '' }}</td>
                                            <td>{{ container.dateEnlevement ? container.dateEnlevement|date('Y-m-d') : '' }}</td>
                                            <td>{{ container.poidsTare }}</td>
                                            <td>{{ container.type }}</td>
                                            <td>{{ container.temperature }}</td>
                                            <td>{{ container.prorietaire }}</td>
                                            <td>{{ container.ref }}</td>
                                            <td>{{ container.poidsBrute }}</td>
                                            <td>{{ container.unitePayante }}</td>
                                            <td>{{ container.nbColis }}</td>

                                            <td>{{ container.bl }}</td>
                                            <td>{{ container.etat }}</td>
                                            <td>{{ container.blEtat }}</td>



                                            {{ include('container/_delete_form.html.twig') }}

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">no records found</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
