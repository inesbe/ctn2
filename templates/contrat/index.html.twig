<!DOCTYPE html>

<title>Contrat index</title>

{% block body %}
    <h1>Contrat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_expiration</th>
                <th>Max_cont</th>
                <th>Max_vrac</th>
                <th>Max_roulant</th>
                <th>Id_utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.id }}</td>
                <td>{{ contrat.dateExpiration ? contrat.dateExpiration|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.maxCont }}</td>
                <td>{{ contrat.maxVrac }}</td>
                <td>{{ contrat.maxRoulant }}</td>
                <td>{{ contrat.idUtilisateur }}</td>
                <td>
                    <a href="{{ path('contrat_show', {'id': contrat.id}) }}">show</a>
                    <a href="{{ path('contrat_edit', {'id': contrat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contrat_new') }}">Create new</a>
{% endblock %}
