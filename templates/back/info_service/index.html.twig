{% extends 'back/base.html.twig' %}

{% block title %}

    Services

{% endblock %}

{% block body %}

    <br>
    <h1 style="color:#ec4844;">Gestion des Services    <a href="{{ path('info_service_new') }}" class="btn btn-default"><i class="fas fa-plus-circle" style="color:#ec4844;" ></i> Ajouter nouveau service</a>
    </h1>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">


                <div class="col-md-9">
                    <div class="card card-danger card-outline">
                        {% for info in info_services %}
                            <div class="card-header">
                                <h3 class="card-title"><b>{{ info.titre }}</b></h3>

                                <div class="card-tools">
                                    <a href="{{ path('info_service_edit', {'id': info.id}) }}" class="btn btn-tool" title="Modifier"><i class="far fa-edit"></i></a>

                                </div>
                            </div>


                            <!-- /.mailbox-controls -->
                            <div class="mailbox-read-message">
                              <p> {{ info.contenu |nl2br }}</p>


                        </div>
                            <!-- /.mailbox-read-message -->
                            <!-- /.card-footer -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <form method="post" action="{{ path('info_service_delete', {'id': info.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ info.id) }}">
                                    <button type="submit" class="btn btn-default"><i class="far fa-trash-alt" style="color:#ec4844;"></i> Supprimer</button>
                                    </form>


                                </div>


                            </div>
                            <!-- /.card-footer -->
                        {% else %}
                            <div class="mailbox-read-message">
                                <p>NO RECORDS FOUND</p>

                            </div>
                        {% endfor %}
                    </div>


                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

{% endblock %}