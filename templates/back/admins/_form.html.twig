<section class="content">
    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-danger">

                <div class="card-header">
                    <h3 class="card-title">Veuillez remplir ce formulaire</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="inputName">Nom</label>
                        {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="inputName">Prénom</label>
                        {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prénom'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="inputName">UserName</label>
                        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="inputName">Role</label>
                        {{ form_widget(form.role,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <label >Password</label>
                        {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Mot de passe'}})|nl2br }}
                    </div>

                    <div class="form-group">
                        <label for="inputProjectLeader">Choisir une image</label>
                        <div class="input-group col-xs-3">

                            {{ form_widget(form.image,{ 'attr' : {'class' : 'form-control file-upload-info'}}) }}

                        </div>
                    </div>



                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('admins_index') }}" class="btn btn-secondary">Cancel</a>
            <button type="submit"
                    class="btn btn-success float-right">{{ button_label|default('Sauvegarder') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</section>