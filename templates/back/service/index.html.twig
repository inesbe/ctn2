{% extends 'back/base.html.twig' %}

{% block title %}

    Services

{% endblock %}

{% block body %}

    <br>
    <h1 style="color:#ec4844;">Gestion des Services</h1>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-3">
                    <a href="{{ path('service_new') }}" class="btn btn-danger btn-block mb-3"><h3>+</h3></a>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Les sevices</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                {% for service in services %}
                                    <li class="nav-item active">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-chevron-circle-right"></i> {{service.nom}}
                                            <span class="badge bg-danger float-right"><i class="fas fa-eye"></i></span>
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="nav-item active">

                                                <center> NO RECORDS FOUND </center>
                                    </li>
                                {% endfor %}



                            </ul>

                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->


                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

{% endblock %}