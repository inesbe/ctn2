{% extends 'back/base.html.twig' %}

{% block title %}Afficher reponse{% endblock %}

{% block body %}

    </br>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{ path('reclamation_afficher', {'id': reclamation.id}) }}" class="btn btn-danger btn-block mb-3">Retour</a>

                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Date Réclamation</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" > <i class="far fa-calendar-alt text-danger"></i> {{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</a>
                                </li>

                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Détails sur le client</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a  class="nav-link" title="Nom & Prenom">
                                        <i class="far fa-user text-danger"></i> {{ reclamation.nom }} {{ reclamation.prenom }}

                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a  class="nav-link" title="Télephone">
                                        <i class="fas fa-phone text-danger"></i> {{ reclamation.telephone }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a  class="nav-link" title="Nationalité">
                                        <i class="fas fa-passport text-danger"></i> {{ reclamation.nationalite }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a  class="nav-link" title="Adresse">
                                        <i class="fas fa-map-marker-alt text-danger"></i> {{ reclamation.adresse }}

                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a  class="nav-link" title="Ville">
                                        <i class="fas fa-city text-danger"></i> {{ reclamation.ville }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-danger card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Lire le courrier</h3>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>Réponse à une réclamation client</h5>
                                <h6>À: {{ reclamation.email }}
                                    <span class="mailbox-read-time float-right">{{ reclamation.dateReponse ? reclamation.dateReponse|date('Y-m-d H:i:s') : '' }}</span></h6>
                            </div>

                            <div class="mailbox-read-message">
                                <p>{{ reclamation.reponse |nl2br }}</p>
                            </div>
                            <!-- /.mailbox-read-message -->
                        </div>

                        <!-- /.card-footer -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-print" style="color:royalblue;"></i> Imprimer</button>
                            </div>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

{% endblock %}